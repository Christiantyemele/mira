{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"]
  },
  "include": [
    "services/**/*",
    "storage/**/*",
    "tests/**/*",
    "config/**/*"
  ],
  "exclude": [
    "extensions/**/*",
    "node_modules",
    "dist"
  ]
}
