{
  "name": "mira-assistant",
  "displayName": "Mira Assistant",
  "publisher": "mira",
  "version": "0.0.1",
  "engines": { "vscode": "^1.92.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:mira.connect",
    "onCommand:mira.listTools",
    "onCommand:mira.executePrompt",
    "onView:mira.chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "mira.connect", "title": "Mira: Connect" },
      { "command": "mira.listTools", "title": "Mira: List Tools" },
      { "command": "mira.executePrompt", "title": "Mira: Execute Prompt" },
      { "command": "mira.openChatView", "title": "Mira: Open Chat View" },
      { "command": "mira.openTerminalPanel", "title": "Mira: Open Terminal Panel" },
      { "command": "mira.terminal.newSession", "title": "Mira: New Terminal Session" },
      { "command": "mira.terminal.killSession", "title": "Mira: Kill Terminal Session" },
      { "command": "mira.terminal.reattachSession", "title": "Mira: Reattach Terminal Session" },
      { "command": "mira.openPlannerView", "title": "Mira: Open Planner" },
      { "command": "mira.planner.createPlan", "title": "Mira: Create Plan" },
      { "command": "mira.planner.updateTask", "title": "Mira: Update Task" }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "miraSidebar",
          "title": "Mira",
          "icon": "images/architecture.drawio.xml"
        }
      ]
    },
    "views": {
      "miraSidebar": [
        { "id": "miraChatView", "name": "Mira Chat" }
      ],
      "explorer": [
        { "id": "mira.terminal", "name": "Mira Terminal Sessions" },
        { "id": "mira.planner", "name": "Mira Planner" }
      ]
    }
  },
  "extensionKind": ["workspace"]
}
